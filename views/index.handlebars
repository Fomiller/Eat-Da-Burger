<div class="container">
    <div>
        <h1>BURGERS</h1>
    </div>
    <div class="row">
      <h2>Add a Burger!!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Burger:</label>
          <input type="text" id="bname" name="name">
        </div>
      <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="row">
      {{!-- Burgers to be eaten --}}
      <div class="col-md-6">
          <div class="card">
              <div class="card-body">
                  {{#each burger}}
                    {{#unless devoured}}
                      {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                  {{/each}}
              </div>
          </div>
      </div>
      {{!-- Eaten burgers --}}
      <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                {{#each burger}}
                  {{#if devoured}}
                    {{> burgers/burger-block-devoured devoured=true}}
                  {{/if}}
                {{/each}}
            </div>
        </div>
      </div>
    </div>
</div>